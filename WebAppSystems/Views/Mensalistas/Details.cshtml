@model WebAppSystems.Models.Mensalista

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<hr />

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Mensalista</h4>
        <hr />
        <form asp-action="Create">
            <dl class="row">
                <dt class="col-sm-2">
                    Cliente
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Client.Name)
                </dd>
                <dt class="col-sm-2">
                    Valor Mensal Bruto
                </dt>
                <dd class="col-sm-10">
                    @String.Format(new System.Globalization.CultureInfo("pt-BR"), "{0:N2}", Model.ValorMensalBruto)
                </dd>
                <dt class="col-sm-2">
                    Comissão Parceiro
                </dt>
                <dd class="col-sm-10">
                    @String.Format(new System.Globalization.CultureInfo("pt-BR"), "{0:N2}", Model.ComissaoParceiro)
                </dd>
                <dt class="col-sm-2">
                    Comissão Sócio
                </dt>
                <dd class="col-sm-10">
                    @String.Format(new System.Globalization.CultureInfo("pt-BR"), "{0:N2}", Model.ComissaoSocio)
                </dd>

            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>
