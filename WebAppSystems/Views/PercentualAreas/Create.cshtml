@model WebAppSystems.Models.PercentualArea

@{
    ViewData["Title"] = "Novo Registro de Valor";
}

<style>
    .currency-input::-webkit-inner-spin-button,
    .currency-input::-webkit-outer-spin-button {
        appearance: none;
        margin: 0;
    }
</style>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Cadastro de Percentuais por Cliente/Área</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label">Cliente</label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientName"></select>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label">Área</label>
                <select asp-for="DepartmentId" class ="form-control" asp-items="ViewBag.DepartmentName"></select>
            </div>
            <div class="form-group">
                <label asp-for="Percentual" class="control-label"></label>
                <input asp-for="Percentual" class="form-control" pattern="^[0-9]+([.,][0-9]{1,2})?$" data-val="false" />
                <span asp-validation-for="Percentual" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        </script>
}